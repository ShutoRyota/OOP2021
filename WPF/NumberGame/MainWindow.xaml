<Window x:Class="NumberGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumberGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <StackPanel>
        <TextBlock x:Name="time" Height="20"/>

        <Grid x:Name="maingrid" Height="500">
        </Grid>
        
        <TextBlock x:Name="hint"  HorizontalAlignment="Center" Height="20"/>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="start" Content="スタート" Width="60" Height="20" Margin="10,0" Click="start_Click" />
        </StackPanel>
        
    </StackPanel>
</Window>
