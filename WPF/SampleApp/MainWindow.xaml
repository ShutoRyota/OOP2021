<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <DockPanel HorizontalAlignment="Left" Width="792">
        
            <StackPanel Orientation="Horizontal" DockPanel.Dock ="Bottom" HorizontalAlignment="Right" Margin="0,229,500,0" Width="174">
                <Button x:Name="okButton" Content="OK" Width="75" Margin="5" Click="okButton_Click"/>
                <Button x:Name="cancelButton" Content="キャンセル" Width="75" Margin="5" Click="cancelButton_Click"/>
            </StackPanel>
            <StackPanel Margin="0,0,500,0">
                <TextBlock TextWrapping="Wrap" Text="メッセージ" Height="25" RenderTransformOrigin="0.497,1.04"/>
                <TextBox x:Name="messageTextBox" HorizontalAlignment="Left" Height="27" Margin="116,0,0,0" TextWrapping="Wrap" Width="123"/>
        </StackPanel>
        
    </DockPanel>
</Window>
